<!-- INCLUDE PARTIALS HEADER-->
<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <!-- BY row CLASS THE INPUT FIELDS WILL SHOR HORIZONTAL BY HORIZONTAL-->
        <h1 style="text-align: center;"> CREATE A NEW CAMPGROUND</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <!-- form-group WILL JUST ADD THE SPACIING IN BETWEEN THE INPUTS-->
                    <input class="form-control" type="text" placeholder="Campground Name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter description" name="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Campground Price" name="price" min="0.01"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!!</button>
                    <!--btn-block WILL JUST CREATE-->
                </div>
            </form>
            <!-- THIS FORM WILL CREATE A POST REQUEST SO THE FORM WILL GOTO app.post("/campgrounds",function(req,res){})-->
            <a href="/campgrounds">BACK TO CAMPGROUND</a>
        </div>
    </div>
</div>

